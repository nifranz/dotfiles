{
    "title": "PowerKeys",
    "rules": [
        {
            "description": "right shift -> powerkeys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "modifiers": [
                                "left_control"
                            ],
                            "repeat": true
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "fn -> powerkeys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_forward"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn",
                            "modifiers": []
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}